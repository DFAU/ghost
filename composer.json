{
  "name": "dfau/ghost",
  "type": "typo3-cms-extension",
  "description": "TYPO3 Background Jobqueue",
  "license": "GPL-3.0+",
  "replace": {
    "typo3-ter/ghost": "self.version"
  },
  "require": {
    "php" : "^7.4",
    "typo3/cms-core": "^11.5",
    "helsner/bernard": "@dev"
  },
  "suggest": {
    "ext-redis": "Necessary for the redis driver",
    "qxsch/worker-pool": "For queue worker parallelization"
  },
  "autoload": {
    "psr-4": {
      "DFAU\\Ghost\\": "Classes/"
    }
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "ghost"
    }
  }
}
